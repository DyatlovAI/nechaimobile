<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carprofile">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/aut_profile_Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="1"/>

        <TextView
            android:id="@+id/aut_profile_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etNumber"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="1"/>

        <TextView
            android:id="@+id/aut_profile_Korobka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etName"
            android:layout_marginTop="70dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="1"/>

        <TextView
            android:id="@+id/aut_profile_Latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etKorobka"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/aut_profile_Longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etLatitude"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/aut_profile_PhotoAut"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/etLongitude"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:contentDescription="Automobile Photo"/>
    </RelativeLayout>
</RelativeLayout>