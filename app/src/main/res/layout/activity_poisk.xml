<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">
        <RelativeLayout
            android:id="@+id/navBar_poisk"
            android:layout_width="match_parent"

            android:layout_height="90dp">
            <TextView
                android:id="@+id/number_posik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Поездки"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold" />
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@id/number_posik"
                android:layout_marginVertical="6dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/poisk_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_below="@id/navBar_poisk"
            android:layout_marginTop="10dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jet"
                    android:gravity="center"
                    android:text="Введите номер"
                    android:textColor="@color/black"
                    android:textSize="22dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="50dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/number_poisk"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/jet"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/custom_input"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/jet"
                    android:layout_marginEnd="50dp"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:visibility="gone"/>




            </LinearLayout>

        </RelativeLayout>

            <Button
                android:id="@+id/dalee"
                android:layout_below="@id/poisk_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_filt"
                android:fontFamily="@font/jet"
                android:text="Далее"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/search_close_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Закрыть"
                android:layout_below="@id/dalee"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/frame_back_filter"
                android:textColor="@android:color/black"
                android:layout_marginStart="16dp"/>
        </RelativeLayout>